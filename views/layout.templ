package views

templ Layout(title string) {
	<!DOCTYPE html>
	<html lang="en">
		<head>
			<meta charset="UTF-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
			<title>{ title }</title>
			<link rel="stylesheet" href="/static/css/output.css"/>
		</head>
		<body>
			<main class="container">
				{ children... }
			</main>
			<script src="/static/js/htmx.min.js"></script>
		</body>
	</html>
}
