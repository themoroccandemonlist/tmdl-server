########################################
# OAuth2 Configuration
########################################

# Google OAuth Redirect URL (e.g. https://yourdomain.com/auth/google/callback)
GOOGLE_REDIRECT_URL=

# Google OAuth Credentials from https://console.cloud.google.com
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=


########################################
# SSL / HTTPS
########################################

# Enable HTTPS (true/false)
SSL=false


########################################
# PostgreSQL Database Configuration
########################################

DB_USER=postgres
DB_PASSWORD=postgrespassword
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tmdl_db


########################################
# Redis Configuration
########################################

# Redis address (e.g. localhost:6379)
REDIS_ADDRESS=localhost:6379

# Redis auth
REDIS_USERNAME=redis
REDIS_PASSWORD=redispassword


########################################
# Session & Security
########################################

# 32-byte random session key (generate with: openssl rand -hex 32)
SESSION_KEY=
